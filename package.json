{
  "name": "push-capture",
  "version": "1.0.0",
  "private": true,
  "description": "Traffic capture to webpush notification subscriptions platform",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "bun@1.3.9",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write --unsafe .",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "turbo": "^2.4.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
